span, li {
  font-size: 16px;
}

h2 {
  text-decoration: underline;
  margin: 15px 0px;
}

h3 {
  font-weight: 100;
}

.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.listDependencies {
  margin-top: 10px;
  display: flex;
  flex-direction: column;

  div {
    li {
      align-items: center;
      border: 1px solid;
      width: 25%;

      img {
        margin-bottom: 10px;
      }
    }
  }

  li {
    display: flex;
    flex-direction: column;
  }
}

.firstNames {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25px;
  margin-top: 25px;
}

.secondNames {
  display: flex;
  justify-content: space-between;
}

.exampleComponents {
  display: flex;
  flex-direction: column;

  h1 {
    margin-bottom: 50px;
  }
}

.instructions {
  width: 50%;
  margin-left: 90px;
}

.teste {
  align-items: center;
  width: 20%;
}

:global(.grm-panel__content) {
  display: flex;
  flex-direction: column;
  align-items: center;

  span {
    margin-top: 5px;
  }
}

.content {
  display: flex;
  flex-direction: column;
}

.header {
  background: black;
  height: 250px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

  img {
    -webkit-animation: rotation 10s linear infinite;
    -moz-animation: rotation 10s linear infinite;
    animation: rotation 10s linear infinite;
  }

  h1 {
    color: #fff;
    margin-top: 50px;
  }
}

@keyframes rotation {
  from {
    -webkit-transform: translate(-200%) rotate(0deg);
  }

  to {
    -webkit-transform: translate(200%) rotate(359deg);
  }
}
